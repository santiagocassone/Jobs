                        <input type="text" value="@ViewData["OrderNo"]" name="o" hidden />
                        <input type="text" value="@ViewData["ProjectFolder"]" name="projfolder" hidden />
                        <button type="submit" class="orderButton" style="margin-left:840px">Summary Info</button>
                    </form>
