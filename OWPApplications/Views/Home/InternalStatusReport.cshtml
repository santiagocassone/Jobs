@{
    ViewData["Title"] = "Internal Status Report";
    ViewData["NavBarColor"] = "violet";
    ViewData["ShowNavBar"] = "True";
    ViewData["Type"] = "InternalStatusReport";
}
@model OWPApplications.Models.InternalStatusReport.InternalStatusReportViewModel;
@{
    List<string> selectedCustomersTemp = ViewData["SelectedCustomers"] as List<string>;
    string selectedCustomers = ViewData["SelectedCustomers"] == null || selectedCustomersTemp.Count() == 0 ? null : String.Join(",", selectedCustomersTemp.ToArray());
    List<string> salespersonTemp = ViewData["Salesperson"] as List<string>;
    string salesperson = ViewData["Salesperson"] == null || salespersonTemp.Count() == 0 ? null : String.Join(",", salespersonTemp.ToArray());
}
<style type="text/css">

    .table-container {
        max-height: 800px;
        overflow-x: hidden;
    }

        .table-container table {
            display: flex;
            flex-flow: column;
            height: 100%;
            width: 100%;
        }

            .table-container table thead {
                flex: 0 0 auto;
                width: calc(100% - 0.9em);
            }

            .table-container table tbody {
                flex: 1 1 auto;
                display: block;
                overflow-y: scroll;
            }

                .table-container table tbody tr {
                    width: 100%;
                }

                .table-container table thead, .table-container table tbody tr {
                    display: table;
                    table-layout: fixed;
                }

    .orderButton {
        background: none !important;
        border: none;
        padding: 0 !important;
        color: dodgerblue;
    }

    .reqCRD {
        width: -webkit-fill-available;
    }

    .values-input {
        width: -webkit-fill-available;
    }


    .isrTable {
        display: flex;
        flex-flow: column;
        width: 100%;
    }

        .isrTable thead {
            flex: 0 0 auto;
            width: calc( 100% );
        }

        .isrTable tbody {
            flex: 1 1 auto;
            display: block;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .isrTable tr {
            width: 100%;
            display: table;
            table-layout: fixed;
        }


    .tooltip-inner {
        min-width: 100%;
        max-width: 100%;
        background-color: white;
    }

    .rTable {
        display: table;
        width: 100%;
    }

    .rTableRow {
        display: table-row;
    }

    .rTableCell, .rTableHead {
        display: table-cell;
        padding: 3px 10px;
        border: 1px solid #999999;
        color: black;
    }

    .rTableHeading {
        display: table-header-group;
        background-color: #ddd;
        font-weight: bold;
        color: black;
    }

    .rTableBody {
        display: table-row-group;
    }

    .tooltip-inner {
        background-color: lightgray !important;
    }

    .clsBlack {
        color: black;
    }

    .clsRed {
        color: red;
    }

    .tooltip.top .tooltip-arrow {
        border-top-color: black;
    }

    .tooltip.right .tooltip-arrow {
        border-right-color: black;
    }

    .tooltip.bottom .tooltip-arrow {
        border-bottom-color: black;
    }

    .tooltip.left .tooltip-arrow {
        border-left-color: black;
    }

    #tblSummary th {
        padding: 5px;
        vertical-align: middle;
    }

    #tblSummary td {
        padding: 0;
        vertical-align: middle;
    }
</style>



@if (Model.ShowSummary)
{
    if (Model.SummaryInfo != null && Model.SummaryInfo.Count > 0)
    {
        <input id="regionISRFilter" value="@ViewData["Region"]" hidden />
        //SUMMARY INFO
        <div class="row mt-4" id="summary-container" style="width: 1850px; margin-left: -370px">
            <div>
                <h3 class="d-inline-block" style="margin-left: 50px; margin-bottom: 15px;">Summary Info</h3>
                @if (Model.ComesFromMV)
                {
                    <a id="backToMV" href="/isrmanagerview?@Model.SalespersonType=@Model.SalespersonCode&cuttoffdate=@Model.CutOffDate" style="margin-left: 30px; vertical-align: 2px">Back to Manager View</a>
                }
            </div>
            <div class="card col-12 p-3">
                <div class="form form-inline mx-4 mb-4">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Project ID</div>
                        </div>
                        <input type="text" class="form-control" id="projectIDFilter" style="width:100px">
                    </div>
                    <div class="input-group mb-2 ml-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Accountability</div>
                        </div>
                        <select class="form-control" id="accountabilityFilter" style="width:135px">
                            <option>All</option>
                            <option>Sales Support</option>
                            <option>PM</option>
                        </select>
                    </div>
                    <div class="input-group mx-4  mb-2">
                        <span class="header-info--label left">Total Orders Open:</span>
                        <span class="header-info--value">@Model.TotalOrdersOpen</span>
                    </div>
                    <div class="input-group mx-4  mb-2">
                        <span class="header-info--label left">Total Open Sell:</span>
                        <span class="header-info--value">@Model.TotalOpenSell</span>
                    </div>
                    <div class="input-group mx-4  mb-2">
                        <span class="header-info--label left">Total Open Cost:</span>
                        <span class="header-info--value">@Model.TotalOpenCost</span>
                    </div>
                    <div class="input-group mx-4  mb-2">
                        <span class="header-info--label left">Total Sell Eligible for Partial Invoicing:</span>
                        <span class="header-info--value">@Model.TotalSellEligibleforPartialInvoicing</span>
                    </div>
                </div>

                @foreach (var item in Model.ResultSalespersons)
                {
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <h4 style="margin-left: 20px">@item</h4>
                            <p id="@item.Trim().Replace(" ","").Replace("/","")" style="display:none; color:red;">Update Hedberg Cust Req Date to realistic projected billing date</p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.ShowViewClosedOrdersLink)
                            {
                                using (Html.BeginForm("index", "isrclosedordersummary", FormMethod.Post))
                                {
                                    <input type="hidden" value="@(String.Join(",", (ViewData["SalesPerson"] as List<string>).ToArray()))" name="csvSalesperson" />
                                    <input type="hidden" value="@(String.Join(",", (ViewData["SelectedCustomers"] as List<string>).ToArray()))" name="csvCustomers" />
                                    <input type="hidden" value="@ViewData["CutOffDate"]" name="csvCuttOffDate" />
                                    <input type="hidden" value="@ViewData["SPType"]" name="csvSalespersonType" />
                                    <input type="hidden" value="@ViewData["Region"]" name="csvRegion" />
                                    <button type="button" class="orderButton" id="pdfLink" style="margin-left:700px" onclick="printPDFISR(summaryInfoData)">Print in PDF</button>

                                    <button type="submit" class="orderButton" style="margin-left:700px" onclick="clearDateValues()">View Closed Orders</button>
                                }
                            }
                        </div>
                    </div>

                    <div class="alt-table-responsive table-responsive table-container" style="overflow-y:hidden">
                        <table id="tblSummary" class="table table-sm table-bordered text-center tablesorter isrTable">
                            <thead>
                                <tr>
                                    <th style="width:28px"></th>
                                    <th scope="col" class="table-header" style="width:85px">Project ID</th>
                                    <th scope="col" class="table-header" style="width:120px">Accountability</th>
                                    <th scope="col" class="table-header" style="width:70px">Order #</th>
                                    <th scope="col" class="table-header" style="width:95px">Order Date</th>
                                    <th scope="col" class="table-header" style="width:105px">Customer</th>
                                    <th scope="col" class="table-header" style="width:115px">Order Title</th>
                                    <th scope="col" class="table-header" style="width:95px">Last Estimated Arrival Date</th>
                                    <th scope="col" class="table-header" style="width:95px">Customer Requested Date</th>
                                    <th id="sortTh" scope="col" class="table-header" style="width:92px">Percentage of Sell Available for Partial Invoicing</th>
                                    <th scope="col" class="table-header" style="width:110px">Sell Eligible for Partial Invoicing</th>
                                    <th scope="col" class="table-header" style="width:110px">Total Open Sell</th>
                                    <th scope="col" class="table-header" style="width:110px">Total Open Cost</th>
                                    <th scope="col" class="table-header" style="width:70px">Qty Lines Open</th>
                                    <th scope="col" class="table-header" style="width:95px">Scheduled Dates</th>
                                    <th scope="col" class="table-header" style="width:100px">Requested CRD</th>
                                    <th scope="col" class="table-header">Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.SummaryInfo.Count(); i++)
                                {
                                    var line = Model.SummaryInfo.ElementAt(i);
                                    if (line.SalespersonName == item)
                                    {
                                        <tr>
                                            <td style="width:28px;vertical-align:middle">
                                                <input type="checkbox" class="projCheck"
                                                       data-orderno="@line.OrderNo"
                                                       data-ordertitle="@line.OrderTitle"
                                                       data-projectid="@line.ProjectID"
                                                       data-accountability="@line.Accountability"
                                                       data-customername="@line.CustomerName"
                                                       data-totalsell="@line.TotalOpenSell"
                                                       data-totalcost="@line.TotalOpenCost"
                                                       data-selleligible="@line.SellEligibleforPartialInvoicing"
                                                       data-companycode="@line.CompanyCode" />
                                            </td>
                                            <td class="projId" style="width:85px">@line.ProjectID</td>
                                            <td style="width:120px">
                                                <select class="form-control values-input accountability" data-source="ISR_APP"
                                                        data-orderno="@line.OrderNo"
                                                        data-field="Accountability"
                                                        data-companycode="@line.CompanyCode"
                                                        data-upsertlevel="OR"
                                                        data-ordertype="O">
                                                    <option selected="@(line.Accountability.Trim() == "Sales Support")">Sales Support</option>
                                                    <option selected="@(line.Accountability.Trim() == "PM")">PM</option>
                                                </select>
                                            </td>
                                            <td style="width:70px">
                                                @Html.ActionLink(
                                                    line.OrderNo,
                                                    "InternalStatusReport",
                                                    "home",
                                                    new {
                                                        cutoffdate = Model.CutOffDate,
                                                        orderno = line.OrderNo,
                                                        c = selectedCustomers,
                                                        s = salesperson,
                                                        regionISR = ViewData["Region"],
                                                        salespersontype = ViewData["SPType"],
                                                        o = ViewData["OrderNo"],
                                                        projfolder = ViewData["ProjectFolder"],
                                                        view = "det" },
                                                    new {target="_blank", @class = "ordernocrd" }
                                                )
                                            </td>
                                            <td style="width:95px"><span style="cursor:pointer;" data-orderno="@line.OrderNo" class="showDet">@line.OrderDate</span></td>
                                            <td style="width:105px"><span class="cust">@line.CustomerName</span></td>
                                            <td class="emailTooltip" data-html="true" data-toggle="tooltip" title="@line.Tooltip(line.EmailLogs)" style="width:115px">@line.OrderTitle</td>
                                            <td class="DateTooltip" data-html="true" data-toggle="tooltip" title="@line.DateTooltip(line.EstArrDates)" style="width:95px">@line.EstimatedArrivalDate</td>
                                            @if (line.CustomerRequestDate == "")
                                            {
                                                <td style="width:95px"><span class="crd" data-alertdate="no">@line.CustomerRequestDate</span></td>
                                            }
                                            else
                                            {
                                                if (DateTime.Parse(line.CustomerRequestDate) < DateTime.Now)
                                                {
                                                    <td style="width:95px"><span class="crd" data-alertdate="yes" data-item="@item.Trim().Replace(" ","").Replace("/","")" style="color:red;">@line.CustomerRequestDate</span></td>
                                                }
                                                else
                                                {
                                                    <td style="width:95px"><span class="crd" data-alertdate="no">@line.CustomerRequestDate</span></td>
                                                }
                                            }
                                            <td style="width:92px" class="sortTd" data-value="@(line.PercentageSellAvailablePartialInvoicing == 0 ? "" : line.PercentageSellAvailablePartialInvoicing.ToString("P"))">@line.PercentageSellAvailablePartialInvoicing</td>
                                            <td style="width:110px">@line.SellEligibleforPartialInvoicing.ToString("C")</td>
                                            <td style="width:110px">@line.TotalOpenSell.ToString("C")</td>
                                            <td style="width:110px">@line.TotalOpenCost.ToString("C")</td>
                                            <td style="width:70px">@line.QtyOpen</td>
                                            @if (line.ScheduledDates?.Count == 1)
                                            {
                                                <td style="width:95px;color:@line.ScheduledDates[0].Color">@line.ScheduledDates[0].Date</td>
                                            }
                                            else if (line.ScheduledDates?.Count > 1)
                                            {
                                                string tooltip = @"<div>";
                                                foreach (var sd in line.ScheduledDates)
                                                {
                                                    tooltip += @"<p class='cls" + sd.Color + @"'>" + sd.Date + @"</p>";
                                                }
                                                tooltip += @"</div>";

                                                <td class="schedDateTooltip" data-html="true" data-toggle="tooltip" title="@tooltip" style="width:95px">MULTIPLE</td>
                                            }
                                            else
                                            {
                                                <td style="width:95px"></td>
                                            }
                                            <td style="width:100px;padding:5px">
                                                <input type="text" data-source="ISR_APP"
                                                       data-orderno="@line.OrderNo"
                                                       data-field="CRD"
                                                       data-companycode="@line.CompanyCode"
                                                       data-upsertlevel="OR"
                                                       data-ordertype="O"
                                                       class="values-input-date reqCRD" />
                                            </td>
                                            <td style="padding:0 5px 0 5px">
                                                <textarea class="values-input txtComments" id="comments-@line.OrderNo"
                                                          data-source="ISR_APP"
                                                          data-orderno="@line.OrderNo"
                                                          data-field="Comment"
                                                          data-companycode="@line.CompanyCode"
                                                          data-upsertlevel="OR"
                                                          data-ordertype="O"
                                                          rows="3">@line.Comment</textarea>
                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }


            </div>
        </div>

        <div class="card mt-5" style="width:800px; margin-left:150px;">
            <div class="card-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link h3 mb-0 active" id="inv-tab" data-toggle="tab" href="#inv" role="tab" aria-controls="inv" aria-selected="false">Invoice</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link h3 mb-0" id="crd-tab" data-toggle="tab" href="#crd" role="tab" aria-controls="crd" aria-selected="false">CRD Change Request</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="inv" class="tab-pane fade show active">
                        <div class="mt-4">
                            <div class="card offset-2 col-md-8 p-5">
                                <form id="invoiceEmailForm">
                                    <div class="form-group">
                                        <label for="invInvoiceType">Invoice Type</label>
                                        <select class="custom-select mr-sm-2" id="invInvoiceType">
                                            <option value="Complete">Complete</option>
                                            <option value="Partial">Partial</option>
                                        </select>
                                    </div>
                                    <div class="form-group" id="invInvoiceDate">
                                        <label for="completiondate">Actual Completion Date</label>
                                        <input class="form-control datepicker" id="completiondate" name="completiondate" type="text" autocomplete="off" style="text-indent:8px" />
                                    </div>
                                    <div class="form-group" id="invInvoiceReceived" style="display:none;">
                                        <label for="invoice-received_select">Received or Paid</label>
                                        <select class="custom-select" id="invoice-received_select">
                                            <option value="Received" selected>Received</option>
                                            <option value="Paid">Paid (includes received)</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputYourName">Your Name</label>
                                        <input type="text" class="form-control" id="inputYourName" name="inputYourName" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="invYourEmail">Your Email Address</label>
                                        <input type="email" class="form-control" id="invYourEmail" name="invYourEmail" required>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="invCC1">CC</label>
                                            <input type="email" class="form-control" id="invCC1" />
                                        </div>
                                        <div class="form-group  col-md-6">
                                            <label for="invCC2">CC</label>
                                            <input type="email" class="form-control" id="invCC2" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="invYourEmail">Comments</label>
                                        <textarea class="form-control" id="invComments" name="invComments" rows="3"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="fileAttachment">Add attachment</label>
                                        <input type="file" class="form-control-file" id="fileAttachment">
                                    </div>
                                    <div class="form-row">
                                        <button type="submit" class="btn btn-primary btn-block mb-2" id="sendInvoiceEmailForm">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="crd" class="tab-pane fade">
                        <div class="mt-4">
                            <div class="card offset-2 col-md-8 p-5">
                                <form id="EmailFormInternalStatusCRD">
                                    <div class="alert alert-info" style="display:none" id="msgEmailForm">
                                        Additional information is needed in order to process your request.
                                    </div>
                                    <div class="form-group">
                                        <label for="crdYourEmail">Your Email Address</label>
                                        <input type="email" class="form-control" id="crdYourEmail" name="crdYourEmail" required>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputCC1">CC</label>
                                            <input type="email" class="form-control" id="inputCC1" />
                                        </div>
                                        <div class="form-group  col-md-6">
                                            <label for="inputCC2">CC</label>
                                            <input type="email" class="form-control" id="inputCC2" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputYourName">Your Name</label>
                                        <input type="text" class="form-control" id="inputYourName" name="inputYourName" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputComments">Comments</label>
                                        <textarea class="form-control" id="inputComments" name="inputComments" rows="3"></textarea>
                                    </div>
                                    <div class="form-row">
                                        <button type="submit" class="btn btn-primary btn-block mb-2" id="SendEmailsInternalStatusCRD">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-results">
            <span id="noresults">No results to show.</span>
            <div class="d-flex justify-content-center">
                <div id="loading" class="spinner-border text-@ViewData["NavBarColor"]--custom" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    }
}


@if (Model.ShowDetails)
{
    <input id="regionISRFilter" value="@ViewData["Region"]" hidden />
    <input id="companyCodeLog" value="@Model.SummaryInfo[Model.ActiveIndex].CompanyCode" hidden />
    <div class="details-container">
        @*HEADER INFO*@
        <div class="row mt-4">
            <div class="col-12">
                <h3 style="display:inline-block;float:left">Header Info</h3>
                @using (Html.BeginForm())
                {
                    <form method="post" action="InternalStatusReport">
                        <input type="text" value="sum" name="view" hidden />
                        <input type="text" value="@Model.CutOffDate" name="cutoffdate" hidden />
